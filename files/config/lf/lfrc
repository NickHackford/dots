# Basic Settings
set hidden true
set drawbox true
set icons true
set ignorecase true

# Kitty preview doesn't work in tmux
# set previewer ~/.config/lf/preview.sh
# set cleaner ~/.config/lf/cleaner.sh

# Blurry until lf gets sixel support
set previewer ctpv
set cleaner ctpvclear
&ctpv -s $id
&ctpvquit $id

# Custom Functions
cmd add %{{
  printf "Add: "
  read ans
  if [[ "${ans: -1}" == "/" ]]; then
    mkdir -p $ans
    echo "Directory $ans Created"
  else
    path=$(dirname $ans)
    [ "$path" != "." ] && mkdir -p $path
    touch $ans
    echo "Created file $ans."
  fi
}}

cmd commandOnSelection %{{
  printf "Run on Selection: "
  read ans
  files=$(printf "%s" "$fx" | sed ':a;N;$!ba;s/\n/ /g')
  $ans $files
  if [ $? -eq 0 ]; then
    echo "ran $ans $files"
  fi
  read
  lf -remote 'send reload'
}}

cmd z %{{
	result="$(zoxide query --exclude $PWD $@ | sed 's/\\/\\\\/g;s/"/\\"/g')"
	lf -remote "send $id cd \"$result\""
}}

cmd zi ${{
	result="$(zoxide query -i | sed 's/\\/\\\\/g;s/"/\\"/g')"
	lf -remote "send $id cd \"$result\""
}}

cmd on-cd &{{
    zoxide add "$PWD"
}}

# Bindings
map . commandOnSelection
map a add 
map Y $printf "%s" "$fx" | sed ':a;N;$!ba;s/\n/ /g' | wl-copy
map c copy
map x cut
map C clear
map d delete
map f filter
map R $qmv

# Movement
map gh cd ~
map gc cd ~/codebase
map gp cd ~/Pictures
map gd cd ~/Downloads

