{
  "theme": "system",
  "$schema": "https://opencode.ai/config.json",
  "lsp": {
    "typescript": {
      "disabled": true
    }
  },
  "mcp": {
    "devex-mcp-server": {
      "command": ["devex-mcp-server"],
      "environment": {
        "FASTMCP_TOOL_ATTEMPT_PARSE_JSON_ARGS": "1",
        "MCP_METRICS_ORIGIN": "claude_code"
      },
      "type": "local"
    }
  },
  "permission": {
    "bash": {
      "*": "allow",
      "nix *": "ask",
      "git *": "ask",
      "git status*": "allow",
      "git log*": "allow",
      "git show*": "allow",
      "git diff*": "allow",
      "git branch": "allow",
      "git branch -l*": "allow",
      "git branch --list*": "allow",
      "git remote": "allow",
      "git remote -v*": "allow",
      "git ls-files*": "allow",
      "git cat-file*": "allow",
      "git rev-parse*": "allow",
      "git describe*": "allow",
      "git config --get*": "allow",
      "git config --list*": "allow"
    }
  }
}
