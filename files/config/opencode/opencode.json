{
  "theme": "system",
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "lsp": {},
  "mcp": {
    "chrome-devtools": {
      "type": "local",
      "command": [
        "npx",
        "chrome-devtools-mcp@latest",
        "--autoConnect",
        "--browserUrl",
        "http://127.0.0.1:9222"
      ]
    },
    "brave-search": {
      "type": "local",
      "command": [
        "/etc/profiles/per-user/nick/bin/npx",
        "-y",
        "@modelcontextprotocol/server-brave-search"
      ],
      "enabled": true,
      "environment": {
        "BRAVE_API_KEY": "{env:BRAVE_API_KEY}"
      }
    },
    "github": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN",
        "ghcr.io/github/github-mcp-server"
      ],
      "environment": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "{env:GITHUB_PERSONAL_ACCESS_TOKEN}"
      }
    }
  },
  "permission": {
    "bash": {
      "*": "allow",
      "nix *": "ask",
      "git *": "ask",
      "git status*": "allow",
      "git log*": "allow",
      "git show*": "allow",
      "git diff*": "allow",
      "git branch": "allow",
      "git branch -l*": "allow",
      "git branch --list*": "allow",
      "git remote": "allow",
      "git remote -v*": "allow",
      "git ls-files*": "allow",
      "git cat-file*": "allow",
      "git rev-parse*": "allow",
      "git describe*": "allow",
      "git config --get*": "allow",
      "git config --list*": "allow"
    }
  }
}
