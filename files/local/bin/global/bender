#!/usr/bin/env bash

# Source helper functions
source "$(dirname "${BASH_SOURCE[0]}")/tmux_helpers"

# Get tmux session name
session_name=$(tmux display-message -p '#S')

# Create horizontal split for bender (creates right pane)
create_typed_split "bend-reactor" "-h"
bender_pane=$(find_pane_by_type "bend-reactor")

# Send bender command to the new pane
tmux send-keys -t "$bender_pane" "bend reactor serve --enable-tools --update --ts-watch ./" C-m

# Switch back to shell pane
switch_to_pane "shell"

# Open browser
open "https://local.hubspotqa.com/social/893882954/manage"
